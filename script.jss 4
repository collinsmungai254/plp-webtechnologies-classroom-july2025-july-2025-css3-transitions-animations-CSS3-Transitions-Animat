// ðŸ“šâœ¨ Part 2: Functions with Parameters, Scope, and Return Values

function calculateArea(width, height) {
  return width * height;
}

function displayArea() {
  const result = calculateArea(5, 10); // Local scope
  document.getElementById("functionResult").textContent = `Area: ${result}`;
}

displayArea(); // Call function to show result

// ðŸŽ¨âœ¨ Part 1 + ðŸŽ¨ðŸŽ¬ Part 3: Trigger CSS Animation with JS

const box = document.getElementById("animatedBox");
document.getElementById("animateBtn").addEventListener("click", () => {
  box.classList.toggle("animate");
});

// ðŸŽ¬ Modal Controls
const modal = document.getElementById("modal");
const openBtn = document.getElementById("openModal");
const closeBtn = document.getElementById("closeModal");

openBtn.addEventListener("click", () => {
  modal.classList.remove("hidden");
});

closeBtn.addEventListener("click", () => {
  modal.classList.add("hidden");
});

